<CMS_MODULE>

  <CMS_INPUT_TEXT name="cs_salutation" hFill="yes" singleLine="no" useLanguages="yes">
    <LANGINFOS>
      <LANGINFO lang="*" label="Salutation" description="Insert the Salutation."/>
      <LANGINFO lang="DE" label="Anrede" description="Tragen Sie die Anrede ein."/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

  <CMS_INPUT_TEXT name="cs_firstname" hFill="yes" singleLine="no" useLanguages="no">
    <LANGINFOS>
