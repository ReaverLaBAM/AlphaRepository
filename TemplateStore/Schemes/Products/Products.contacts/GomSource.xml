    </LANGINFOS>
  </CMS_INPUT_TEXT>

  <CMS_INPUT_TEXT name="cs_mail" hFill="yes" singleLine="no" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="E-mail" description="Insert the E-mail address."/>
      <LANGINFO lang="DE" label="E-Mail" description="Tragen Sie die E-Mail-Adresse ein."/>
    </LANGINFOS>
