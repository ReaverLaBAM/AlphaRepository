      <LANGINFO lang="DE" label="Vorname" description="Tragen Sie den Vornamen ein."/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

  <CMS_INPUT_TEXT name="cs_lastname" hFill="yes" singleLine="no" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Last name" description="Insert the last name."/>
      <LANGINFO lang="DE" label="Nachname" description="Tragen Sie den Nachnamen ein."/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

  <CMS_INPUT_TEXT name="cs_phone" hFill="yes" singleLine="no" useLanguages="no">
    <LANGINFOS>
