<?xml version="1.0" encoding="UTF-8"?>
<RULES>
	<RULE>
		<WITH>
			<NOT>
				<GREATER_THAN>
					<PROPERTY name="LENGTH" source="pt_headline"/>
					<NUMBER>40</NUMBER>
				</GREATER_THAN>
			</NOT>
		</WITH>
		<DO>
			<VALIDATION scope="SAVE">
				<PROPERTY name="VALID" source="pt_headline"/>
				<MESSAGE lang="*" text="Only 40 characters allowed!"/>
				<MESSAGE lang="DE" text="Es sind nur 40 Zeichen zugelassen!"/>
			</VALIDATION>
		</DO>
	</RULE>
	<RULE>
		<WITH>
			<NOT>
				<GREATER_THAN>
					<PROPERTY name="LENGTH" source="pt_subheadline"/>
					<NUMBER>55</NUMBER>
				</GREATER_THAN>
			</NOT>
		</WITH>
		<DO>
			<VALIDATION scope="SAVE">
				<PROPERTY name="VALID" source="pt_subheadline"/>
				<MESSAGE lang="*" text="Only 55 characters allowed!"/>
				<MESSAGE lang="DE" text="Es sind nur 55 Zeichen zugelassen!"/>
			</VALIDATION>
		</DO>
	</RULE>
</RULES>